<form class="flex-stuff" action="/users/<%= user._id %>?_method=PATCH" method="post">
  <div>
    <label for="name">Name:</label><br/>
    <input id="name" type="text" name="user[name]" value="<%= user.name %>"><br/>
  </div>
  <div>
    <label for="username">Username:</label><br/>
    <input id="username" type="text" name="user[userName]" value="<%= user.userName %>"><br/>
  </div>
  <div>
    <label for="password">Password:</label><br/>
    <input id="password" type="text" name="user[password]" placeholder="Re-type password"><br/>
  </div>
  <div>
    <input type="submit">
  </div>
</form>
